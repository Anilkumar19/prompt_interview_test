<p id="notice"><%= notice %></p>

<!-- <h1>Listing Organizations for Admin</h1> -->
<div class="row">
    <%= form_tag(users_path, :method => "get", id: "search") do %>
    <div class="col-sm-10">
      <%= text_field_tag :search, params[:search], placeholder: "Org_Name Created_by Country", value: nil %>
    </div>
    <div class="col-sm-2">
      <%= submit_tag "Search", :name => nil %>
    </div>
    
    <% end %>
</div>


<div class="row table_data">
  <table>
    <thead>
      <tr>
        <th>id</th>
        <th>Org Name</th>
        <th>Org Identifier</th>
        <th>Created_by</th>
        <th>Country</th>
        <th>Created_at</th>
        <th>Updated_at</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @organizations.each do |organization| %>
        <tr>
          <td><%= organization.id %></td> 
          <td><%= organization.name %></td>
          <td><%= organization.org_identifier %></td>
          <td><%= organization.user.email %></td>
          <td><%= organization.country %></td>
          <td><%= organization.created_at.in_time_zone('Chennai').strftime('%d-%m-%y %H:%M') %></td>
          <td><%= organization.updated_at.in_time_zone('Chennai').strftime('%d-%m-%y %H:%M') %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br>
<%= will_paginate @organizations %>


